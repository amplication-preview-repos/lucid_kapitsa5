datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Article {
  author      String?
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  content     String?
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  publishedAt DateTime?
  title       String?
  updatedAt   DateTime  @updatedAt
}

model Category {
  articles    Article[]
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  name        String?
  updatedAt   DateTime  @updatedAt
}
